          //- p {{ data.doll.createdAt }}
      .row
        .col-sm-4
          img(ng-if="data.doll.image" src="{{data.doll.image.url}}").doll-img
          badge(badges="[]")
        .col-sm-8
          //- detail-list(details="[{key: 'doll1', val: 43}]")
          detail-list(details="details")
          //- - {{thisIsMine = (user && data.doll.owner.id === user.id)}}
