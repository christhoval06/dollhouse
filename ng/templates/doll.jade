.show-doll.jumbotron
  //- TODO: Extract this
  .row: .col-sm-offset-11.col-sm-1
    a(ng-href="{{previousPage}}") 
      button.btn.btn-primary Back to {{ previousPage | backName }}
  .row
    .row
    .row.doll-details
      .row.doll-heading  
        .doll-name
          h2 {{ data.doll.name }}
        .join-date
          {{ data.doll.createdAt | date : format : "fullDate" }}
          //- p this
          //- p {{ data.doll.createdAt | date : format : "yyyy" }}
