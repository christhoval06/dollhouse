
.col-sm-8.col-md-9.jumbotron
  h1 Here are some dolls
  .dolls.angular
    //- DOLLS ALREADY GROUPED
    .row(ng-repeat="doll_threes in data.dolls")
      .col-sm-4.col-md-4(ng-repeat="doll in doll_threes | filter:dollFilter")
        doll-mixin(doll="doll")
.col-sm-4.col-md-3
  h2 Filter/Search Dolls
  ul.list-group(style='margin-top: 70px;')
    //- a(href='/blog', class=!data.category ? 'active' : false).list-group-item All Categories
    //- each cat in data.categories
    //-   a(href='/blog/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
    li.list-group-item
      label.label-primary Anything
      input(ng-model="dollFilter.$")
    li.list-group-item
      label.label-primary Name
      input(ng-model="dollFilter.name")
    li.list-group-item
      label.label-primary Owner
      input(ng-model="dollFilter.owner.name.first")
    li.list-group-item
      label.label-primary Maker
      input(ng-model="dollFilter.maker")
    li.list-group-item
      label.label-primary Maker Two
      select(ng-model="dollFilter.maker")
        option(ng-repeat="model in ['Ipplehouse', 'Other Guys']" value ="{{model}}" ) {{model}}
        //- option(ng-repeat="model in ['Ipplehouse', 'Other Guys']" value = {{model}} ) {{model}}
  h2 React
    #reactiveDoll
  //- .filters      
  //- form.navbar-form.navbar-right
  form.form-horizontal
    .form-group
      label.label-primary Anything
      input(ng-model="dollFilter.$")
    .row
      .col-sm-1: label Anything
      .col-sm-1: input(ng-model="dollFilter.$")
    .row
      .col-sm-1: label Name
      .col-sm-1: input(ng-model="dollFilter.name")
    .row
      .col-sm-1: label Owner
      .col-sm-1: input(ng-model="dollFilter.owner.name.first")
    .row
      .col-sm-1: label Maker
      .col-sm-1: input(ng-model="dollFilter.maker")
  form.form-horizontal
    .form-group
      label.label-primary Anything
      input(ng-model="dollFilter.$")
    .input-group
      span.input-group-addon Anything
      input(ng-model="dollFilter.$")
    .input-group
      span.input-group-addon Name
      input(ng-model="dollFilter.name")
    .input-group
      span.input-group-addon Owner
      input(ng-model="dollFilter.owner.name.first")
    .input-group
      span.input-group-addon Maker
      input(ng-model="dollFilter.maker")
